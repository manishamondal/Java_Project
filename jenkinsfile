pipeline {
    agent any 

    stages {

        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/manishamondal/Java_Project.git'
            }
        }

        stage('Verify Tools') {
            steps {
                sh 'java -version'
                sh 'mvn -version'
            }
        }

        stage('Build') {
            steps {
                echo 'Building the application...'
                sh 'mvn -B -DskipTests clean package'
            }
        }

        stage('Test') {
            steps {
                echo 'Running tests...'
                sh 'mvn test'
            }
            post {
                always {
                    junit 'target/surefire-reports/*.xml'
                }
            }
        }
      
        stage('Deploy') {
            steps {
                echo 'Deploying the application...'
                sh 'chmod +x jenkins/scripts/deploy.sh || true'
                sh './jenkins/scripts/deploy.sh || true'
            }
        }
    }

    post {
        always {
            echo 'Pipeline finished.'
        }
        success {
            echo 'Build and deployment succeeded!'
        }
        failure {
            echo 'Build or deployment failed.'
        }
    }
}
